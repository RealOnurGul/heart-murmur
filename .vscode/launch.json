            "program": "${workspaceFolder}/audio_to_spectrogram.py",
            "console": "integratedTerminal",
            "python": "./heart_murmur_env/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        }
    ]
} 